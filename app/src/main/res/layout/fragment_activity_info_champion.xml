<?xml version="1.0" encoding="utf-8"?>
<layout>
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content_activity_info_champion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="a45858000w.aplilol.ActivityInfoChampionFragment"
        tools:showIn="@layout/activity_info_champion"
        xmlns:app="http://schemas.android.com/apk/res-auto">


        <TextView
            android:text="Campeon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CampeonNombre"
            android:textSize="24sp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:text="Attack"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/lblAttack"
            app:layout_constraintLeft_toLeftOf="@+id/lblTipoCampeon"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/lblTipoCampeon"
            app:layout_constraintRight_toRightOf="@+id/lblTipoCampeon" />

        <TextView
            android:text="Defense"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/lblDefense"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/lblAttack"
            app:layout_constraintLeft_toLeftOf="@+id/lblAttack"
            app:layout_constraintRight_toRightOf="@+id/lblAttack" />

        <TextView
            android:text="Ability"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/lblAbility"
            app:layout_constraintRight_toRightOf="@+id/lblDefense"
            app:layout_constraintTop_toBottomOf="@+id/lblDefense"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/lblDefense" />

        <TextView
            android:text="Difficulty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/lblDifficulty"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/lblAbility"
            app:layout_constraintLeft_toLeftOf="@+id/lblAbility"
            app:layout_constraintRight_toRightOf="@+id/lblAbility" />

        <TextView
            android:text="Tipo de Campeon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblTipoCampeon"
            android:layout_marginStart="64dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/CampeonNombre"
            app:layout_constraintRight_toLeftOf="@+id/CampeonNombre"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tViewTipoCampeon"
            android:layout_marginStart="32dp"
            app:layout_constraintLeft_toRightOf="@+id/lblTipoCampeon"
            android:layout_marginLeft="32dp"
            app:layout_constraintBottom_toBottomOf="@+id/lblTipoCampeon"
            app:layout_constraintTop_toTopOf="@+id/lblTipoCampeon" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvAtaque"
            app:layout_constraintTop_toTopOf="@+id/lblAttack"
            app:layout_constraintBottom_toBottomOf="@+id/lblAttack"
            app:layout_constraintLeft_toLeftOf="@+id/tViewTipoCampeon" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDefensa"
            app:layout_constraintLeft_toLeftOf="@+id/tvAtaque"
            app:layout_constraintTop_toTopOf="@+id/lblDefense"
            app:layout_constraintBottom_toBottomOf="@+id/lblDefense"
            app:layout_constraintRight_toRightOf="@+id/tvAtaque" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvAbilidad"
            app:layout_constraintTop_toTopOf="@+id/lblAbility"
            app:layout_constraintLeft_toLeftOf="@+id/tvDefensa" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDificultat"
            app:layout_constraintTop_toTopOf="@+id/lblDifficulty"
            app:layout_constraintBottom_toBottomOf="@+id/lblDifficulty"
            app:layout_constraintLeft_toLeftOf="@+id/tvAbilidad"
            app:layout_constraintRight_toRightOf="@+id/tvAbilidad" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblPassive"
            android:text="Pasiva"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/lblDifficulty"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/lblDifficulty"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtPassive"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/lblPassive"
            app:layout_constraintLeft_toLeftOf="@+id/lblPassive"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:text="Funcionalidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblAllytips"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtPassive"
            app:layout_constraintLeft_toLeftOf="@+id/txtPassive"
            app:layout_constraintRight_toRightOf="@+id/lblPassive"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtAllytips"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/lblAllytips"
            app:layout_constraintLeft_toLeftOf="@+id/lblAllytips"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:text="Funcionalidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblEnemytips"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/lblAllytips"
            app:layout_constraintLeft_toLeftOf="@+id/lblAllytips"
            app:layout_constraintRight_toRightOf="@+id/lblAllytips"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtEnemytips"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/lblEnemytips"
            app:layout_constraintLeft_toLeftOf="@+id/lblEnemytips"
            app:layout_constraintRight_toRightOf="parent"
            />



        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:id="@+id/pbAttack"
            android:progress="80"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintLeft_toRightOf="@+id/tvAtaque"
            app:layout_constraintHorizontal_bias="0.66"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/tvAtaque"
            app:layout_constraintBottom_toBottomOf="@+id/tvAtaque" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/pbDefense"
            app:layout_constraintLeft_toLeftOf="@+id/pbAttack"
            app:layout_constraintRight_toRightOf="@+id/pbAttack"
            app:layout_constraintTop_toTopOf="@+id/tvDefensa"
            app:layout_constraintBottom_toBottomOf="@+id/tvDefensa"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/pbAbility"
            app:layout_constraintRight_toRightOf="@+id/pbDefense"
            app:layout_constraintLeft_toLeftOf="@+id/pbDefense"
            app:layout_constraintTop_toTopOf="@+id/tvAbilidad"
            app:layout_constraintBottom_toBottomOf="@+id/tvAbilidad"/>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/pbDifficulty"
            app:layout_constraintTop_toTopOf="@+id/tvDificultat"
            app:layout_constraintBottom_toBottomOf="@+id/tvDificultat"
            app:layout_constraintLeft_toLeftOf="@+id/pbAbility"
            app:layout_constraintRight_toRightOf="@+id/pbAbility"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0" />


    </android.support.constraint.ConstraintLayout>
</layout>