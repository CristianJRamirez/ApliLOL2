<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent">


    <ImageView
        android:id="@+id/ImageChamp"
        android:layout_width="92dp"
        android:layout_height="0dp"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:maxHeight="70dp"
        android:scaleType="fitXY"
        app:layout_constraintRight_toLeftOf="@+id/txtChampion"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtChampion"
        app:layout_constraintTop_toTopOf="@+id/txtChampion"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:text="Champion"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtChampion"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:minHeight="?android:attr/listPreferredItemHeight"

        app:layout_constraintRight_toLeftOf="@+id/titulo"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp" />


    <TextView
        android:id="@+id/titulo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignLeft="@+id/txtChampion"
        android:layout_below="@+id/txtChampion"
        android:textSize="12sp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/txtChampion"
        app:layout_constraintBottom_toBottomOf="@+id/txtChampion"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/txtChampion"
        android:layout_marginLeft="8dp" />


</android.support.constraint.ConstraintLayout>

