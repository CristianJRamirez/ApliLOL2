<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <ImageView
            android:id="@+id/ImageChamp"
            android:layout_width="61dp"
            android:layout_height="64dp"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:maxHeight="75dp"
            android:scaleType="fitXY"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            tools:layout_editor_absoluteY="0dp" />


        <TextView
            android:id="@+id/titulo"
            android:layout_alignLeft="@+id/ImageChamp"
            android:layout_below="@+id/ImageChamp"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/ImageChamp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/ImageChamp"
            app:layout_constraintTop_toTopOf="@+id/ImageChamp"
            android:layout_marginTop="8dp" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vertical"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="194dp"
            app:layout_constraintGuide_percent="0.5052083" />

        <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:id="@+id/txtChampion"
            app:layout_constraintLeft_toLeftOf="@+id/ImageChamp"
            app:layout_constraintRight_toRightOf="@+id/ImageChamp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ImageChamp" />

    </android.support.constraint.ConstraintLayout>
</layout>
