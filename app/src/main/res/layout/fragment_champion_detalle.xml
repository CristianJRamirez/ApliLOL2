<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChampionDetalleFragment">

        <ImageView
            android:id="@+id/ImageChampion"
            android:layout_width="150dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:maxHeight="160dp"
            android:scaleType="fitXY"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="300dp" />


            <TextView
                android:id="@+id/NombreChampion"
                android:layout_height="wrap_content"
                android:text="Champion"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                android:layout_marginStart="8dp"
                app:layout_constraintLeft_toRightOf="@+id/ImageChampion"
                android:layout_marginLeft="8dp" />

            <TextView
                android:id="@+id/idChampion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                app:layout_constraintLeft_toRightOf="@+id/ImageChampion"
                android:layout_marginLeft="8dp"
                app:layout_constraintRight_toLeftOf="@+id/NombreChampion"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/titleChampion"
                app:layout_constraintHorizontal_bias="0.47"
                app:layout_constraintVertical_bias="0.25" />


            <TextView
                android:id="@+id/titleChampion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="Titulo "
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.43"
                app:layout_constraintLeft_toRightOf="@+id/ImageChampion"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                app:layout_constraintTop_toBottomOf="@+id/NombreChampion"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/txtlore"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="Lore "
                app:layout_constraintRight_toRightOf="@+id/titleChampion"
                app:layout_constraintLeft_toLeftOf="@+id/titleChampion"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                app:layout_constraintTop_toBottomOf="@+id/titleChampion"
                app:layout_constraintBottom_toTopOf="@+id/descripcionChamp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/descripcionChamp"
                android:layout_height="0dp"
                android:text="Descripcion del Campeon"
                app:layout_constraintLeft_toLeftOf="@+id/ImageChampion"
                app:layout_constraintRight_toRightOf="@+id/titleChampion"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                android:layout_width="0dp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                app:layout_constraintTop_toBottomOf="@+id/ImageChampion" />
    </android.support.constraint.ConstraintLayout>
</layout>